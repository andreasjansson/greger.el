#!/bin/bash

# Modern test script using Eldev
# Automatically discovers and runs ERT tests

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Parse command line arguments
VERBOSE=false
SPECIFIC_FILE=""
HELP=false

while [[ $# -gt 0 ]]; do
    case $1 in
        -v|--verbose)
            VERBOSE=true
            shift
            ;;
        -f|--file)
            SPECIFIC_FILE="$2"
            shift 2
            ;;
        -h|--help)
            HELP=true
            shift
            ;;
        *)
            echo -e "${RED}Unknown option: $1${NC}"
            HELP=true
            shift
            ;;
    esac
done

# Show help if requested
if [ "$HELP" = true ]; then
    echo "Usage: $0 [OPTIONS]"
    echo ""
    echo "Options:"
    echo "  -v, --verbose    Show verbose test output"
    echo "  -f, --file FILE  Run tests only for specific file"
    echo "  -h, --help       Show this help message"
    echo ""
    echo "This script uses Eldev to automatically discover and run ERT tests."
    echo ""
    echo "Requirements:"
    echo "  - Eldev must be installed"
    echo "  - Install with: curl -fsSL https://raw.github.com/emacs-eldev/eldev/master/webinstall/eldev | sh"
    echo "  - Or visit: https://github.com/emacs-eldev/eldev"
    exit 0
fi

echo -e "${BLUE}Running ERT tests with Eldev...${NC}"
echo

# Check if Eldev is installed
if ! command -v eldev &> /dev/null; then
    echo -e "${RED}Error: Eldev is not installed${NC}"
    echo "Please install Eldev first:"
    echo "  curl -fsSL https://raw.github.com/emacs-eldev/eldev/master/webinstall/eldev | sh"
    echo "Or visit: https://github.com/emacs-eldev/eldev"
    exit 1
fi

# Build Eldev command
ELDEV_CMD="eldev"

# Add verbose flag if requested (Eldev uses -v for verbose, but as a global option)
if [ "$VERBOSE" = true ]; then
    ELDEV_CMD="$ELDEV_CMD -v"
fi

ELDEV_CMD="$ELDEV_CMD test"

# Add file pattern if specified
if [ -n "$SPECIFIC_FILE" ]; then
    # Use Eldev's --file option
    ELDEV_CMD="$ELDEV_CMD --file $SPECIFIC_FILE"
fi

# Run tests
echo -e "${BLUE}Running: $ELDEV_CMD${NC}"
echo

if $ELDEV_CMD; then
    echo
    echo -e "${GREEN}All tests passed!${NC}"
    exit 0
else
    echo
    echo -e "${RED}Some tests failed.${NC}"
    exit 1
fi
